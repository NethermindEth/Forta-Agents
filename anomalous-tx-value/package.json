{
  "name": "high-value-transaction-v2",
  "displayName": "High Value Transaction v2",
  "version": "1.0.1",
  "engines": {
    "node": ">=20"
  },
  "description": "Forta bot that monitors transactions that have high value",
  "longDescription": "The bot identifies transactions characterized by anomalous transaction values that surpass a predefined threshold. Its primary role involves actively monitoring transactional activities to pinpoint instances where the transaction value exceeds the established threshold. ",
  "repository": "https://github.com/NethermindEth/Forta-Agents/tree/main/anomalous-tx-value",
  "chainIds": [
    1,
    8453
  ],
  "scripts": {
    "build": "tsc",
    "start": "npm run start:dev",
    "start:dev": "npm run build && nodemon --watch src --watch forta.config.json -e js,ts,json ./dist/agent.js",
    "start:prod": "node ./src/agent.js",
    "tx": "npm run build && forta-bot run --tx",
    "block": "npm run build && forta-bot run --block",
    "range": "npm run build && forta-bot run --range",
    "alert": "npm run build && forta-bot run --alert",
    "sequence": "npm run build && forta-bot run --sequence",
    "file": "npm run build && forta-bot run --file",
    "publish": "forta-bot publish",
    "info": "forta-bot info",
    "logs": "forta-bot logs",
    "push": "forta-bot push",
    "disable": "forta-bot disable",
    "enable": "forta-bot enable",
    "keyfile": "forta-bot keyfile",
    "stake": "forta-bot stake",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "forta-bot": "file:forta-bot-0.2.0.tgz",
    "forta-agent-tools": "^3.1.2",
    "node-fetch": "^2.6.8",
    "bignumber.js": "^9.1.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node-fetch": "^2.6.2",
    "forta-bot-cli": "file:forta-bot-cli-0.2.0.tgz",
    "jest": "^27.0.6",
    "nodemon": "^3.0.2",
    "prettier": "^2.8.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  }
}
